[flake8]
max-line-length = 88
ignore = E266, W503, W504, D100, E203
exclude =
    .git,
    *.md
    venv*
    tests
    docs
    setup.py
    build
per-file-ignores =
    __init__.py: F401
docstring-convention=numpy
extend-ignore =
    # See https://github.com/PyCQA/pycodestyle/issues/373
    E203,
